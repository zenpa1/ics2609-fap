<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<context-param>
		<param-name>DB_URL</param-name>
		<param-value>jdbc:derby://localhost:1527/UsersDB</param-value>
	</context-param>
	<context-param>
		<param-name>DB_USERNAME</param-name>
		<param-value>app</param-value>
	</context-param>
	<context-param>
		<param-name>DB_PASSWORD</param-name>
		<param-value>app</param-value>
	</context-param>
	<context-param>
		<param-name>DB_DRIVER</param-name>
		<param-value>org.apache.derby.jdbc.ClientDriver</param-value>
	</context-param>
	<context-param>
		<param-name>pdfHeaderText</param-name>
		<param-value>activelearning.ph</param-value>
	</context-param>
	<context-param>
		<param-name>pdfFooterText</param-name>
		<param-value>This document contains sensitive information. Handle with care.</param-value>
	</context-param>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>Control.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CreateUserServlet</servlet-name>
		<servlet-class>Control.CreateUserServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>InstructorReportServlet</servlet-name>
		<servlet-class>InstructorReportServlet</servlet-class>
		<init-param>
			<param-name>jdbcClassName</param-name>
			<param-value>org.apache.derby.jdbc.ClientDriver</param-value>
		</init-param>
		<init-param>
			<param-name>dbUserName</param-name>
			<param-value>app</param-value>
		</init-param>
		<init-param>
			<param-name>dbPassword</param-name>
			<param-value>app</param-value>
		</init-param>
		<init-param>
			<param-name>jdbcDriverURL</param-name>
			<param-value>jdbc:derby</param-value>
		</init-param>
		<init-param>
			<param-name>dbHostName</param-name>
			<param-value>localhost</param-value>
		</init-param>
		<init-param>
			<param-name>dbPort</param-name>
			<param-value>1527</param-value>
		</init-param>
		<init-param>
			<param-name>databaseName</param-name>
			<param-value>UsersDB</param-value>
		</init-param>
		<init-param>
			<param-name>pdfHeaderText</param-name>
			<param-value>activelearning.ph</param-value>
		</init-param>
		<init-param>
			<param-name>pdfFooterText</param-name>
			<param-value>This document contains sensitive information. Handle with care.</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>DownloadScheduleServlet</servlet-name>
		<servlet-class>DownloadScheduleServlet</servlet-class>
		<!-- TODO: add db creds here -->
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/LoginServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CreateUserServlet</servlet-name>
		<url-pattern>/CreateUserServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>InstructorReportServlet</servlet-name>
		<url-pattern>/InstructorReportServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DownloadScheduleServlet</servlet-name>
		<url-pattern>/DownloadScheduleServlet</url-pattern>
	</servlet-mapping>
	<session-config>
		<session-timeout>
			30
		</session-timeout>
	</session-config>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<error-page>
		<exception-type>model.InvalidCredentialsException</exception-type>
		<location>/view/error/error_401.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/view/error/error_404.jsp</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/view/error/error_403.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/view/error/error_500.jsp</location>
	</error-page>
	<error-page>
		<exception-type>model.SessionExpiredException</exception-type>
		<location>/view/error/error_session_timeout.jsp</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/view/error/error_general.jsp</location>
	</error-page>
</web-app>
